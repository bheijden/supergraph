<mujoco model="cf2">
  <option density="1.225" viscosity="1.8e-5"/>

<!--  <compiler inertiafromgeom="false" meshdir="assets" autolimits="true" coordinate="local" eulerseq="xyz"/>-->
  <compiler inertiafromgeom="false" meshdir="assets" autolimits="true" eulerseq="xyz"/>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <!-- table -->
<!--    <geom name="table" size="20 20 .2" pos="0 0.0 -0.4" type="plane" material="grid" contype="0" conaffinity="0" condim="3"/>-->
    <!-- platform -->
    <body name="_platform_xyz" pos="0.0 0.0 0.0" >
      <freejoint/>
      <inertial euler="0 0 0" pos="0 0 0" mass="1e-06" diaginertia="1e-06 1e-06 1e-06"/>
      <body name="_platform" pos="0.0 0.0 0.0" >
        <inertial euler="0 0 0" pos="0 0 0" mass="1e0" diaginertia="1e0 1e0 1e0"/>
          <geom name="_platform_geom" rgba="0.2 0.2 0.2 1" type="box" pos="0 0 -0.02" size="0.30 0.25 0.02" contype="4" conaffinity="1" condim="3"/>
          <joint name="_platform_pitch" type="hinge" pos="0 0 0" axis="0 1 0" limited="false" damping="0.5"/>
      </body>
    </body>
    <!-- crazyflie -->
    <body name="cf2" pos="0 0 0">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.027" diaginertia="2.3951e-5 2.3951e-5 3.2347e-5"/>
      <geom name="cf_collision" type="box" rgba="0 1 0 1" pos="0 0 0.012" size="0.025 0.025 0.011" contype="1" conaffinity= "6"/>
      <body name="cf_mocap" pos="0.0 0.0 0.013" >
        <inertial euler="0 0 0" pos="0 0 0" mass="1e-09" diaginertia="1e-09 1e-09 1e-09"/>
        <joint name="cf_mocap" type="slide" axis="1 0 0" range="-0.01 0.01"/>
        <geom type="sphere" name="" rgba="0 0 1 1" pos="0 0 0." size="0.005" contype="0" conaffinity="0"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <position joint="_platform_pitch" kp="20" ctrllimited="true" ctrlrange="-3.14 3.14"/>
  </actuator>

